    <script>
        function toggleFields() {
            var option = document.getElementById("options").value;
            var option1Fields = document.getElementById("option1Fields");
            var option2Fields = document.getElementById("option2Fields");
            var option3Fields = document.getElementById("option3Fields");
            var option4Fields = document.getElementById("option4Fields");
            
            option1Fields.classList.add("hidden");
            option2Fields.classList.add("hidden");
            option3Fields.classList.add("hidden");
            option4Fields.classList.add("hidden");
            
            if (option === "option1") {
                option1Fields.classList.remove("hidden");
            } else if (option === "option2") {
                option2Fields.classList.remove("hidden");
            } else if (option === "option3") {
                option3Fields.classList.remove("hidden");
            } else if (option === "option4") {
                option4Fields.classList.remove("hidden");
            }
        }
    </script>

